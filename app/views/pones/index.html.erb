<div class="row">
  <% @pones.each do |pone| %>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <div class="card mb-3">
        <div class="card-header">
          <%= link_to(pone.name, pone_path(pone.slug)) %>
        </div>
        <div class="card-body">
          <%= number_to_human(pone.points_count) %> good pone points
        </div>
      </div>
    </div>
  <% end %>
</div>
