<% @boons.each do |boon| %>
  <div class="card mb-2">
    <div class="card-body">
      <div class="card-title fs-5">
        <%= link_to(boon.granted_by.name, boon.granted_by.slug) %> gave <%= boon.pone.name %> <%= number_to_human(boon.points_count) %> good pone points!
      </div>
      <%= boon.reason %>
    </div>
  </div>
<% end %>
